<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackeysack09.ultimatetictactoe.GameActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/title" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <!--- Top Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/boardColorOne"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/leftTop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:onClick="BoardClick"
                android:text="@string/test_board" />

            <Button
                android:id="@+id/middleTop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:onClick="BoardClick"
                android:text="@string/test_board" />

            <Button
                android:id="@+id/rightTop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:onClick="BoardClick"
                android:text="@string/test_board" />
        </LinearLayout>

        <!--- Middle Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/boardColorTwo"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/leftCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:onClick="BoardClick"
                android:text="@string/test_board" />

            <Button
                android:id="@+id/middleCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:onClick="BoardClick"
                android:text="@string/test_board" />

            <Button
                android:id="@+id/rightCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:onClick="BoardClick"
                android:text="@string/test_board" />
        </LinearLayout>

        <!-- Bottom Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/boardColorThree"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/leftBottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:onClick="BoardClick"
                android:text="@string/test_board" />

            <Button
                android:id="@+id/middleBottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:onClick="BoardClick"
                android:text="@string/test_board" />

            <Button
                android:id="@+id/rightBottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:onClick="BoardClick"
                android:text="@string/test_board" />
        </LinearLayout>


    </GridLayout>

</android.support.constraint.ConstraintLayout>
